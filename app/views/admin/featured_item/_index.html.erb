<div id="featured-head" class="heading-block">
  <h1><%= title %></h1>
  <%= link_to "add featured item", new_admin_page_featured_item_path(params[:id]), class: "sort-off add-link" %>
  <a id="toggle-sort" class="sort-off">Change Order</a>
  <a id="save-sort" class="sort-on">save changes</a>
  <a id="cancel-sort" class="sort-on">cancel changes</a>
</div>

<div id="featured-items" class="card-bs-row">
  <% featured_items.each do |featured_item| %>

  <div class="card-span-lg-6" data-id="<%= featured_item.id %>">
    <div class="card-content-wrap">

        <div class="card-col title">
          <h4 class="title-text handle"><%= featured_item[:name] %> </h4>
        </div>

        <div class="card-row">
          <div class="col-to-row-md">

            <div class="inner-block m-r-1">
              <h5>Description</h5>
              <p class="card-text"><%= featured_item[:description] %></p>
              <h5 class="m-t-2">Links To</h5>
              <p class="card-text"><%= featured_item.link_url != nil ? featured_item.link_url : 'No Link' %></p>
              <h5 class="m-t-2">Link Title</h5>
              <p class="card-text"><%= featured_item.link_title != nil ? featured_item.link_title : 'No Link Title. (Will Default to "View")' %></p>
            </div>

            <!-- <div class="card-img-col">
              <%= image_tag(featured_item.image.featured_thumb.url, class:"featured-img") if featured_item.image? %>
            </div> -->

          </div>
        </div>

        <div class="card-row controls">
            <%= link_to "edit", edit_admin_featured_item_path(featured_item), class: "page-card-link edit" %>
            <%= link_to "delete", admin_featured_item_path(featured_item), method: "delete", data: {confirm: "Are you sure you want to delete  '#{featured_item.name.titleize}'?"}, class: "page-card-link delete" %>
        </div>

    </div>
  </div>

  <% end %>

</div>

<script type="text/javascript">
  $(function(){
    featured = new FeaturedItemSorter();
  });
</script>
