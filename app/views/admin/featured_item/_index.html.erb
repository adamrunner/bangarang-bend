
<div class="heading-block">
  <h1><%= featured[:name] %> items</h1>
  <%= link_to "add featured item", new_admin_page_featured_item_path(params[:id]), class: "link-success" %>
</div>

<div class="featured-row">
  <% featured[:featured_items].each do |featured_item| %>

  <div class="featured-card-responsive">
    <div class="featured-card-wrap">
      <div class="row-no-gutter">


          <div class="featured-card-fluid-block">
            <h4 class="featured-card-title"><%= featured_item[:name] %></h4>
          </div>

          <div class="featured-card-fluid-block">
            <div class="featured-row">

              <div class="featured-card-desc">
                <p class="text-muted"><%= featured_item[:description] %></p>
                <p class="featured-link-info">Links To: <span> <%= featured_item.link_url != nil ? featured_item.full_link_url : 'No Link' %></span></p>
                <p class="featured-link-info">Order Position: <span> <%= featured_item.position %></span></p>
              </div>

              <div class="featured-card-img">
                <%= image_tag(featured_item.image.featured_thumb.url, class:"img-thumbnail") if featured_item.image? %>
              </div>

            </div>
          </div>

          <div class="inner-feature-card-block">
             <h5 class="inner-card-title">Manage Content</h5>
              <%= link_to "edit", edit_admin_featured_item_path(featured_item), class: "page-card-link" %>
              <%= link_to "delete", admin_featured_item_path(featured_item), method: "delete", data: {confirm: "Are you sure you want to delete  '#{featured_item.name.titleize}'?"}, class: "page-card-link" %>
          </div>

      </div>
    </div>
  </div>

  <% end %>

</div>
