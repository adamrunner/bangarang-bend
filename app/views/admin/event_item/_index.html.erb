<div class="card border-inverse">

  <div class="card-block bg-inverse">
    <h3 class="card-title">personalized events</h3>
    <%= link_to "add event", new_admin_page_event_item_path(params[:id]), class: "btn btn-success" %>
  </div>

  <div class="list-group list-group-flush">
    <% event_items.each do |event_item| %>

      <div class="list-group-item border-inverse">
        <h4 class="font-weight-bold text-capitalize"><%= event_item[:name] %></h4>
        <p class="text-muted"><%= event_item[:description] %></p>
        <%= link_to "edit", edit_admin_event_item_path(event_item), class: "btn btn-info" %>
        <%= link_to "delete", admin_event_item_path(event_item), method: "delete", data: {confirm: "Are you sure you want to delete  '#{event_item.name.titleize}' ?"}, class: "btn btn-danger pull-md-right" %>
      </div>

    <% end %>
  </div>

</div>
