<div class="heading-block">
  <h1>months</h1>
  <%= link_to "add month", new_admin_page_event_item_path(params[:id]), class: "add-link" %>
</div>

  <div class="card-bs-row">
  <% event_items.each do |event_item| %>

      <div class="card-span-lg-6">
        <div class="card-content-wrap">

          <div class="card-col title">
            <h3 class="title-text"><%= event_item[:name] %></h3>
            <small class="text-uppercase m-t-1">Assigned Produce: <%= event_item.num_of_produce %></small>
          </div>

          <div class="card-col">
            <h5>Description</h5>
            <p class="card-text event-item-text">
              <% if event_item[:description] === nil %>
                No description entered yet
              <% else %>
                <%= event_item[:description] %>
              <% end %>
            </p>
          </div>

          <div class="card-row controls">
            <%= link_to "edit", edit_admin_event_item_path(event_item), class: "card-control edit" %>
            <%= link_to "delete", admin_event_item_path(event_item), method: "delete", data: { confirm: "Are you sure you want to delete  '#{event_item.name.titleize}' ?" }, class: "card-control delete" %>
          </div>

        </div>
      </div>
  <% end %>

  </div>
