<div class="card-span-lg-6">
  <div class="card-content-wrap">

      <div class="card-col title">
        <h4 class="title-text"><%= catering_menu[:name] %></h4>
      </div>

      <div class="card-row">
        <h5>Description</h5>
        <p class="card-text">
          <% if catering_menu.description === nil %>
            No description entered yet
          <% else %>
            <%= catering_menu.description %>
          <% end %>
        </p>
      </div>

      <div class="card-row">
        <div class="stats-section">
            <span class="font-weight-bold">Sections </span>
            <span><%= catering_menu.num_of_sections %></span>
            <span class="font-weight-bold">Items </span>
            <span><%= catering_menu.num_of_items %></span>
        </div>
        <div class="stats-section">
            <span class="font-weight-bold">Created </span>
            <span><%= ftime(catering_menu.created_at) %></span>
            <span class="font-weight-bold">Updated </span>
            <span><%= ftime(catering_menu.updated_at) %></span>
        </div>
      </div>

      <div class="card-row controls">
         <%= link_to "name / desc", edit_admin_catering_menu_path(catering_menu), class: "page-card-link name" %>

         <% if controller_name == 'page' %>
           <%= link_to "content", admin_catering_menu_path(catering_menu), class: "page-card-link content" %>
         <% end %>

         <%= link_to "delete", admin_catering_menu_path(catering_menu), method: "delete", data: {confirm: "Are you sure you want to delete '#{caps_first(catering_menu.name)}' and all menu sections/items associated with it?"}, class: "page-card-link delete" %>
      </div>

  </div>
</div>
