<div class="card border-inverse">

  <div class="card-block bg-inverse">
    <h3 class="card-title"><%= biography[:name] %></h3>
    <%= link_to "add biography", new_admin_page_biography_item_path(params[:id]), class: "btn btn-success" %>
  </div>

  <div class="list-group list-group-flush">
    <% biography[:biography_items].each do |biography_item| %>

      <div class="list-group-item border-inverse">
        <h4 class="font-weight-bold text-capitalize"><%= biography_item[:name] %></h4>
        <p class="text-muted"><%= biography_item[:description] %></p>
        <%= link_to "edit", edit_admin_biography_item_path(biography_item), class: "btn btn-info" %>
        <%= link_to "delete", admin_biography_item_path(biography_item), method: "delete", data: {confirm: "Are you sure you want to delete the biography for '#{biography_item.name.titleize}'?"}, class: "btn btn-danger pull-md-right" %>
      </div>

    <% end %>
  </div>

</div>
