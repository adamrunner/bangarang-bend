<div class="card border-inverse">

  <div class="card-block bg-inverse">
    <h3 class="card-title"><%= biography[:name] %></h3>
  </div>

  <div class="list-group list-group-flush">
    <% biography[:biography_items].each do |biography_item| %>

      <div class="list-group-item border-inverse">
        <div class="row">
          <div class="col-xs-12 col-md-10">
            <p class="text-muted"><%= biography_item[:description] %></p>
          </div>
          <div class="col-xs-8 col-md-2">
            <%= image_tag(biography_item.image.biography_thumb.url, class:"img-fluid img-thumbnail") if biography_item.image? %>
          </div>
          <div class="col-xs-12 list-item-footer">
          <%= link_to "edit", edit_admin_biography_item_path(biography_item), class: "btn btn-info" %>
          </div>
        </div>
      </div>

    <% end %>
  </div>

</div>
