<div class="card border-inverse">

  <div class="card-block bg-inverse">
    <h3 class="card-title">philosophies</h3>
    <%= link_to "add philosophy", new_admin_page_philosophy_item_path(params[:id]), class: "btn btn-success" %>
  </div>

  <div class="list-group list-group-flush">
    <% philosophy_items.each do |philosophy_item| %>

      <div class="list-group-item border-inverse">
        <h4 class="font-weight-bold text-capitalize"><%= philosophy_item[:name] %></h4>
        <p class="text-muted"><%= philosophy_item[:description] %></p>
        <%= link_to "edit", edit_admin_philosophy_item_path(philosophy_item), class: "btn btn-info" %>
        <%= link_to "delete", admin_philosophy_item_path(philosophy_item), method: "delete", data: {confirm: "Are you sure you want to delete  '#{philosophy_item.name.titleize}' ?"}, class: "btn btn-danger pull-md-right" %>
      </div>

    <% end %>
  </div>

</div>
