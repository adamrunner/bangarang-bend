<% breadcrumb :root %>

<div id="admin-pages">

  <% @pages.each do |page| %>

    <div class="card-responsive">
      <div class="card-wrap">
        <div class="inner-card-wrap">

          <div class="card-block">
            <h4 class="page-card-title"><%= page.link_name %> <small class="pull-right">page</small> </h4>
            <p class="text-muted card-text"><%= page.description ? page.description : "" %></p>
          </div>

          <div class="page-card-block">
            <div class="inner-page-card-block">
               <h5 class="inner-card-title">Edit Page</h5>

               <%= link_to "name", edit_admin_page_path(page), class: "page-card-link" %>

              <% if page.respond_to?("#{page.content_type}") %>
                <%= link_to "content", admin_page_path(page), class: "page-card-link" %>
              <% else %>
                <a class="page-card-link disabled">content</a>
              <% end %>

              <% if page.landings.empty? != true %>
                <%= link_to "Landing", admin_page_path(page, tab: "landing"), class: "page-card-link" %>
              <% end %>

            </div>
          </div>

        </div>
      </div>
    </div>

  <% end %>

</div>
