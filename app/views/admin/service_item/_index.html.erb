<div class="heading-block">
  <h1>services</h1>
  <%= link_to "add service", new_admin_page_service_item_path(params[:id]), class: "add-link" %>
</div>

<div class="card-bs-row">

    <% service_items.each do |service_item| %>

      <div class="card-span-lg-6">
        <div class="card-content-wrap">

            <div class="card-col title">
              <h4 class="title-text"><%= service_item[:name] %></h4>
            </div>

            <div class="card-col">
              <h5>Description</h5>
              <p class="card-text service-item-text">
                <%= service_item[:description] %>
              </p>
            </div>

            <div class="card-row controls">
                <%= link_to "edit", edit_admin_service_item_path(service_item), class: "card-control edit" %>
                <%= link_to "delete", admin_service_item_path(service_item), method: "delete", data: {confirm: "Are you sure you want to delete  '#{service_item.name.titleize}' ?"}, class: "card-control delete" %>
            </div>

        </div>
      </div>

    <% end %>

</div>
