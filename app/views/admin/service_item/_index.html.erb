<div class="card border-inverse">

  <div class="card-block bg-inverse">
    <h3 class="card-title">services</h3>
    <%= link_to "add service", new_admin_page_service_item_path(params[:id]), class: "btn btn-success" %>
  </div>

  <div class="list-group list-group-flush">
    <% service_items.each do |service_item| %>

      <div class="list-group-item border-inverse">
        <h4 class="font-weight-bold text-capitalize"><%= service_item[:name] %></h4>
        <p class="text-muted"><%= service_item[:description] %></p>
        <%= link_to "edit", edit_admin_service_item_path(service_item), class: "btn btn-info" %>
        <%= link_to "delete", admin_service_item_path(service_item), method: "delete", data: {confirm: "Are you sure you want to delete  '#{service_item.name.titleize}' ?"}, class: "btn btn-danger pull-md-right" %>
      </div>

    <% end %>
  </div>

</div>
