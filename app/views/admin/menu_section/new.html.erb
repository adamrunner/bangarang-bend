<% breadcrumb :menu_section, @catering_menu, "new" %>

<div class="col-xs-12 col-md-6">
  <div class="card">
    <div class="card-block">
      <h3 class="card-title text-capitalize">new menu section</h3>

      <%= form_for :menu_section, url: admin_catering_menu_menu_section_index_path do |f| %>
        <div class="form-group">
          <%= f.label :name, "name", class: "font-weight-bold" %>:
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <%= f.submit "save", class: "btn btn-success" %>
        <%= link_to "cancel", :back, class: "btn btn-secondary" %>
      <% end %>

    </div>
  </div>
</div>
