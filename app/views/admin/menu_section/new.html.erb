<% breadcrumb :menu_section, @catering_menu, "new" %>

<div class="card-bs-row">

  <div class="card-span-md-6">
    <div class="card-content-wrap">

      <div class="card-col title">
        <h3 class="title-text">new menu section</h3>
      </div>

      <div class="form-block">
        <%= form_for :menu_section, url: admin_catering_menu_menu_section_index_path do |f| %>
          <div class="form-group">
            <%= f.label :name, "name", class: "font-weight-bold" %>:
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group controls">
            <%= f.submit "save", class: "btn btn-success" %>
            <%= link_to "cancel", :back, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>

</div>
