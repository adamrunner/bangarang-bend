<script type="text/javascript">
  Bangarang.flashMsg = new FlashMessage();
  Bangarang.listenTo( 'flashMessage', function(data) {
    Bangarang.flashMsg.render(data);
  });

  data = {
  <% if notice %>
    notice: "<%= notice %>"
  <% end %>

  <% if alert %>
    alert: "<%= alert %>"
  <% end %>
  }
  Bangarang.trigger( 'flashMessage', data );
</script>
