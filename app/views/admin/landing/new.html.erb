<% breadcrumb :landing, @page, "new" %>

<div class="col-xs-12 col-md-6">
  <div class="card">
    <div class="card-block">
      <h3 class="card-title text-capitalize">create home landing</h3>

      <%= form_for :landing, url: admin_page_landing_index_path do |f| %>
        <div class="form-group">
          <%= f.label :first_line, "Heading Line 1", class: "font-weight-bold" %>:
          <%= f.text_field :first_line, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :second_line, "Heading Line 2", class: "font-weight-bold" %>:
          <%= f.text_field :second_line, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :image, "upload image", class: "font-weight-bold" %>
          <%= f.file_field :image, class: "form-control-file" %>
        </div>

        <%= f.submit "save", class: "btn btn-success" %>
        <%= link_to "cancel", :back, class: "btn btn-secondary" %>
      <% end %>

    </div>
  </div>
</div>

<div class="col-xs-12 col-md-6">
  <div class="card card-block">
    <h3>CATERING & <small class="m-l-2 font-italic text-muted"><-- line one</small> <br>
    EVENT SERVICES <small class="m-l-2 font-italic text-muted"><-- line two</small> </h3>
  </div>
</div>
