  <div class="heading-block">
    <h1 class="card-title"><%= page.name %></h1>
  </div>
  <div class="row">

  <div class="landing-col">
    <div class="card-bs-row">

    <div class="card-span-12">
      <div class="card-content-wrap">

        <div class="card-col">
            <% if page.landings.empty? %>
                <div class="card-block">
                  <p class="lead text-muted">No landing created yet.</p>
                  <%= link_to "create landing", new_admin_page_landing_path(page), class: "btn btn-success" %>
                </div>
              <% else %>
                <div id="landing" class="jumbotron" style="background-image: url(<%= landing.image.url %>)">
                  <!-- <h1><%= landing.heading.html_safe %></h1> -->
                </div>
            <% end %>
          </div>

          <div class="card-row controls">
            <% if landing != nil %>
              <%= link_to "edit", edit_admin_landing_path(landing), class: "page-card-link edit" %>
              <%= link_to "delete", admin_landing_path(landing), method: "delete", data: {confirm: "Are you sure you want to delete landing?"}, class: "page-card-link delete" %>
            <% end %>
          </div>

          </div>

        </div>
      </div>
    </div>




</div>
