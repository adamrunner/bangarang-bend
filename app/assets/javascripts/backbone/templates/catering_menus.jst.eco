<div class="card-block">
    <h1><%= @page.get('link_name') %></h1>
</div>

<% @menus.forEach (menu) =>: %>
  <a class="catering-menu-btn" href="/<%= @page.get('link_name') %>/<%= menu.link() %>">
    <div class="card-block catering-menus-block">
      <h3><%= menu.get('name') %> <i class="btl bt-angles-right"></i></h2>
      <p><%= menu.get('description') %></p>
    </div>
  </a>
<% end %>
